  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{api_url}}/health"
      }
    },
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{api_url}}/signup",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Pablo\",\n  \"last_name\": \"Ezeta\",\n  \"email\": \"ideaswatts+demo2@gmail.com\",\n  \"password\": \"test123\",\n  \"role\": \"traveler\"\n}"
        }
      }
    },
    {
      "name": "Login (guarda token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  const data = pm.response.json();",
              "  if (data && data.access_token) {",
              "    pm.collectionVariables.set('token', data.access_token);",
              "    console.log('Token guardado en {{token}}');",
              "  }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{api_url}}/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"ideaswatts+demo2@gmail.com\",\n  \"password\": \"test123\"\n}"
        }
      }
    },
    {
      "name": "Profile - Get me",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{api_url}}/profile"
      }
    },
    {
      "name": "Profile - Update",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{api_url}}/profile",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Pablo\",\n  \"last_name\": \"Ezeta\",\n  \"phone\": \"+52 55 1234 5678\"\n}"
        }
      }
    },
    {
